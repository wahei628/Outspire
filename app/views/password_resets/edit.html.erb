<div class="container mx-auto px-4">
  <div class="flex justify-center">
    <div class="w-full max-w-lg text-customGreen">
      <h1 class="text-3xl font-bold mb-6 text-center"><%= "パスワード変更" %></h1>
      <%= form_with model: @user, url: password_reset_path(@token), method: :patch, local: true do |f| %>
        <%= render 'shared/flash_message', object: f.object %>

        <div class="form-control w-full mb-4">
          <%= f.label :email, class: "label" %>
          <div class="input-group">
            <input type="text" class="input input-bordered w-full bg-customGreen text-customWhite" value="<%= @user.email %>" disabled>
          </div>
        </div>

        <div class="form-control w-full mb-4">
          <%= f.label :password, class: "label" %>
          <%= f.password_field :password, class: "input input-bordered w-full bg-customGreen text-customWhite" %>
        </div>

        <div class="form-control w-full mb-4">
          <%= f.label :password_confirmation, class: "label" %>
          <%= f.password_field :password_confirmation, class: "input input-bordered w-full bg-customGreen text-customWhite" %>
        </div>

        <div class="form-control w-full">
          <%= f.submit "変更", class: "btn btn-primary w-full text-customWhite" %>
        </div>
      <% end %>
    </div>
  </div>
</div>