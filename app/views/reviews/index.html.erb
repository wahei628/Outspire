<h1 class="text-2xl font-bold mb-4">レビュー</h1>

<div class="space-y-4">
  <% @reviews.each do |review| %>
    <div class="card shadow-lg compact bg-base-100">
      <div class="card-body">
        <h2 class="card-title">タイトル：<%= review.title %></h2>
        <p>テキスト：<%= review.content %></p>
        <p class="text-sm text-gray-500">投稿者: <%= review.user.name %></p>
        <div class="flex space-x-2">
          <%= link_to '編集', edit_review_path(review), class: "btn btn-secondary" %>
          <%= link_to '詳細', review_path(review), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to '新しいレビュー', new_review_path, class: "btn btn-primary mt-4" %>
