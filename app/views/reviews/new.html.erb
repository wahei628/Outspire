<h1 class="text-2xl font-bold mb-4">レビュー作成</h1>

<%= form_with(model: @review, local: true, class: "form-control w-full max-w-lg") do |form| %>
  <% if @review.errors.any? %>
    <div id="error_explanation" class="alert alert-error shadow-lg mb-4">
      <h2 class="font-bold"><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :タイトル, class: "label" %>
    <%= form.text_field :title, class: "input input-bordered w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :テキスト, class: "label" %>
    <%= form.text_area :content, class: "textarea textarea-bordered w-full" %>
  </div>

  <div class="mb-4">
    <%= form.submit '作成', class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to '戻る', reviews_path, class: "btn btn-secondary" %>
