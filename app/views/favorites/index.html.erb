<div class="container mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6">お気に入り一覧</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @favorites.each do |favorite| %>
    <div class="card border border-gray-200 shadow-lg p-4">
      <h2 class="card-title text-lg font-semibold text-customGreen">
        <%= link_to favorite.place_name, favorite_path(favorite), class: "text-blue-500 hover:underline" %>
      </h2>
      <p class="text-gray-700 mt-2"><strong>住所:</strong> <%= favorite.place_address %></p>
    </div>
    <% end %>
  </div>
</div>