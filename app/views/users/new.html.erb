<div class="container mx-auto px-4 text-customGreen">
  <div class="max-w-md mx-auto">
    <h1 class="text-4xl font-bold mb-4">ユーザー登録</h1>
    <%= form_with model: @user, class: "space-y-4" do |f| %>
      <div class="form-control">
        <%= f.label :name, "ユーザー名（ニックネーム）", class: "label" %>
        <%= f.text_field :name, class: "input input-bordered w-full bg-customGreen" %>
        <% if @user.errors[:name].any? %>
          <div class="text-red-500 text-sm">
            <%= @user.errors[:name].join(", ") %>
          </div>
        <% end %>
      </div>
      <div class="form-control">
        <%= f.label :email, "メールアドレス", class: "label" %>
        <%= f.email_field :email, class: "input input-bordered w-full bg-customGreen" %>
        <% if @user.errors[:email].any? %>
          <div class="text-red-500 text-sm">
            <%= @user.errors[:email].join(", ") %>
          </div>
        <% end %>
      </div>
      <div class="form-control">
        <%= f.label :password, "パスワード", class: "label" %>
        <%= f.password_field :password, class: "input input-bordered w-full bg-customGreen" %>
        <% if @user.errors[:password].any? %>
          <div class="text-red-500 text-sm">
            <%= @user.errors[:password].join(", ") %>
          </div>
        <% end %>
      </div>
      <div class="form-control">
        <%= f.label :password_confirmation, "パスワード確認", class: "label" %>
        <%= f.password_field :password_confirmation, class: "input input-bordered w-full bg-customGreen" %>
        <% if @user.errors[:password_confirmation].any? %>
          <div class="text-red-500 text-sm">
            <%= @user.errors[:password_confirmation].join(", ") %>
          </div>
        <% end %>
      </div>
      <%= f.submit "登録", class: "btn btn-primary w-full" %>
    <% end %>
    <div class="text-center mt-4">
      <%= link_to 'ログインページへ', login_path, class: "link link-primary" %>
    </div>
  </div>
</div>
