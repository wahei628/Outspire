<div class="results-page p-5">
  <h1 class="text-3xl font-bold mb-4">診断結果</h1>
  <% if @results %>
  <p class="text-xl mb-2">あなたの結果は: <span class="font-semibold"><%= @results[:name] %></span></p>
  <% if @results[:description].present? %>
  <p class="text-lg mb-4"><%= @results[:description] %></p>
  <% end %>
  <% else %>
  <p class="text-lg text-red-500">診断結果が見つかりませんでした。</p>
  <% end %>

  <% if @results[:name] %>
  <p><%= @results[:name] %></p>
  <p><%= @results[:description] %></p>

  <% if @results[:name].include?("カフェ") %>
  <%= link_to '探してみる', places_search_path(type: 'cafe'), class: 'btn btn-primary' %>
  <% elsif @results[:name].include?("映画") %>
  <%= link_to '探してみる', places_search_path(type: 'movie_theater'), class: 'btn btn-primary' %>
  <% elsif @results[:name].include?("公園") %>
  <%= link_to '探してみる', places_search_path(type: 'park'), class: 'btn btn-primary' %>
  <% elsif @results[:name].include?("居酒屋") %>
  <%= link_to '探してみる', places_search_path(type: 'bar'), class: 'btn btn-primary' %>
  <% elsif @results[:name].include?("図書館") %>
  <%= link_to '探してみる', places_search_path(type: 'library'), class: 'btn btn-primary' %>
  <% elsif @results[:name].include?("本屋") %>
  <%= link_to '探してみる', places_search_path(type: 'book_store'), class: 'btn btn-primary' %>
  <% elsif @results[:name].include?("動物園") %>
  <%= link_to '探してみる', places_search_path(type: 'zoo'), class: 'btn btn-primary' %>
  <% elsif @results[:name].include?("水族館") %>
  <%= link_to '探してみる', places_search_path(type: 'aquarium'), class: 'btn btn-primary' %>
  <% elsif @results[:name].include?("ショッピングモール") %>
  <%= link_to '探してみる', places_search_path(type: 'shopping_mall'), class: 'btn btn-primary' %>
  <% end %>
  <% else %>
  <p class="text-lg text-red-500">診断結果が見つかりませんでした。</p>
  <% end %>

  <div>
    <div class="twitter mt-4">
      <%= link_to "https://twitter.com/intent/tweet?url=#{show_result_diagnostics_url(user_session_id: session[:session_id])}&text=【診断結果】%0a%0a#{@results[:name]}",
        target: '_blank', class: "inline-block" do %>
      <button class="btn flex items-center space-x-2 bg-blue-500 hover:bg-blue-700 text-white p-2 rounded">
        <i class="fa-brands fa-x-twitter w-4 h-4"></i>
        <span>結果を共有</span>
      </button>
      <% end %>
    </div>
  </div>
</div>